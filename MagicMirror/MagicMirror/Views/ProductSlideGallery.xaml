<UserControl x:Class="MagicMirror.Views.ProductSlideGallery"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:view="clr-namespace:MagicMirror.Views"
             mc:Ignorable="d" Background="{StaticResource cloudBackground}"
             d:DesignHeight="600" d:DesignWidth="1000"
             MouseDown="UserControl_MouseDown">
    <UserControl.Resources>
        <Storyboard x:Key="LoadedStoryboard">
            <DoubleAnimation Storyboard.TargetName="angleRotation" Storyboard.TargetProperty="Angle"
                 From="0" To="360" Duration="0:0:30" AutoReverse="False" RepeatBehavior="Forever"/>
        </Storyboard>

        <Storyboard x:Key="buttonMenuInStoryboard">
            <DoubleAnimation Duration="0:0:0.5" From="100" To="0" Storyboard.TargetName="menuButtons"
                             Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)">
                <DoubleAnimation.EasingFunction>
                    <QuadraticEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Opacity)" Storyboard.TargetName="menuButtons">
                <EasingDoubleKeyFrame KeyTime="0" Value="0"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.5" Value="1"/>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>

        <Storyboard x:Key="buttonMenuOutStoryboard">
            <DoubleAnimation Duration="0:0:0.5" From="0" To="100" Storyboard.TargetName="menuButtons"
                             Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)">
                <DoubleAnimation.EasingFunction>
                    <QuadraticEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Opacity)" Storyboard.TargetName="menuButtons">
                <EasingDoubleKeyFrame KeyTime="0" Value="1"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.5" Value="0"/>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
    </UserControl.Resources>
    
    <Grid>
        <Viewport3D x:Name="viewport3D" ClipToBounds="False" MouseLeftButtonDown="viewport3D_MouseLeftButtonDown"
                Width="{Binding RelativeSource={RelativeSource FindAncestor,AncestorType={x:Type Window}},Path=ActualWidth}"
                Height="{Binding RelativeSource={RelativeSource FindAncestor,AncestorType={x:Type Window}},Path=ActualHeight}">
            <Viewport3D.Camera>
                <PerspectiveCamera Position="0,0,2" LookDirection="0,0,-1"  FieldOfView="60"/>
            </Viewport3D.Camera>

            <Viewport3D.Children>
                <ModelVisual3D>
                    <ModelVisual3D.Content>
                        <AmbientLight Color="#FFFFFF"/>
                    </ModelVisual3D.Content>

                    <ModelVisual3D>
                        <ModelVisual3D.Content>
                            <DirectionalLight Color="#FFFFFF" Direction="-1,-1,-1"/>
                        </ModelVisual3D.Content>
                    </ModelVisual3D>

                    <ModelVisual3D>
                        <ModelVisual3D.Content>
                            <DirectionalLight Color="#FFFFFF" Direction="1,1,-1"/>
                        </ModelVisual3D.Content>
                    </ModelVisual3D>
                </ModelVisual3D>

                <ModelVisual3D x:Name="mainScene">
                    <ModelVisual3D.Transform>
                        <Transform3DGroup>
                            <RotateTransform3D>
                                <RotateTransform3D.Rotation>
                                    <AxisAngleRotation3D x:Name="angleRotation" Axis="0,-1,0" Angle="0"/>
                                </RotateTransform3D.Rotation>
                            </RotateTransform3D>
                            <TranslateTransform3D OffsetX="0" OffsetY="0" OffsetZ="-18"/>
                        </Transform3DGroup>
                    </ModelVisual3D.Transform>
                    <!--三维场景中实体在后台代码添加-->
                </ModelVisual3D>
            </Viewport3D.Children>
        </Viewport3D>

        <view:MainButtonMenuBar x:Name="menuButtons" VerticalAlignment="Bottom" Visibility="Collapsed">
            <view:MainButtonMenuBar.RenderTransform>
                <TranslateTransform></TranslateTransform>
            </view:MainButtonMenuBar.RenderTransform>
        </view:MainButtonMenuBar>

        <view:BusyIndicator Visibility="Collapsed"></view:BusyIndicator>
    </Grid>
</UserControl>
