<UserControl x:Class="MagicMirror.Views.ProductTryingOnControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
              xmlns:view="clr-namespace:MagicMirror.Views"
             mc:Ignorable="d" d:DesignHeight="600" d:DesignWidth="1000">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
        </Grid.RowDefinitions>
        
        <Grid Margin="10,20,10,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.15*"></ColumnDefinition>
                <ColumnDefinition Width="0.7*"></ColumnDefinition>
                <ColumnDefinition Width="0.15*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            
            <!--用户选择-->
            <ListBox x:Name="lbSelProducts" Background="Transparent" HorizontalAlignment="Center"  
                     SelectionChanged="lbProducts_SelectionChanged" >
                <ListBox.Resources>
                    <Style TargetType="ListBox">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ListBox">
                                    <Border CornerRadius="5" Background="{TemplateBinding ListBox.Background}">
                                        <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Hidden">
                                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center" IsItemsHost="True"/>
                                        </ScrollViewer>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                    <Style TargetType="ListBoxItem" >
                        <Setter Property="Opacity" Value="0.5" />
                        <Setter Property="MaxHeight" Value="75" />
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ListBoxItem">
                                    <Border Margin="3">
                                        <Image Source="{Binding Color.ImagePath}" />
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Trigger.Setters>
                                    <Setter Property="Opacity" Value="1.0" />
                                </Trigger.Setters>
                            </Trigger>
                            <EventTrigger RoutedEvent="Mouse.MouseEnter">
                                <EventTrigger.Actions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Duration="0:0:0.2" Storyboard.TargetProperty="MaxHeight" To="90"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger.Actions>
                            </EventTrigger>
                            <EventTrigger RoutedEvent="Mouse.MouseLeave">
                                <EventTrigger.Actions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Duration="0:0:1" Storyboard.TargetProperty="MaxHeight"  />
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger.Actions>
                            </EventTrigger>
                        </Style.Triggers>
                    </Style>
                </ListBox.Resources>
            </ListBox>

            <Grid Grid.Column="1" Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.7*"></ColumnDefinition>
                    <ColumnDefinition Width="0.3*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                
                <Grid Grid.Column="0" Background="White">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="auto"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Column="0" >
                        <Image x:Name="productImages" Stretch="Fill" Margin="10"></Image>
                        <Image x:Name="productMutibarCode" Source="{Binding productUrl}" VerticalAlignment="Bottom" HorizontalAlignment="Right"
                               Width="60" Height="60" Margin="10,0,10,10"></Image>
                        <!--<Image Source="pack://application:,,,/Resources/Images/QRCode.jpg"
                               VerticalAlignment="Bottom" HorizontalAlignment="Right"
                               Width="80" Height="80" Margin="10,0,10,10"></Image>-->
                    </Grid>

                    <Grid Grid.Column="1" Width="180">
                        <!--基本信息-->
                        <StackPanel Margin="10">
                            <TextBlock x:Name="tbName" FontSize="16" Foreground="Black" TextWrapping="Wrap" Text="{Binding Id,Mode=TwoWay}"></TextBlock>
                            <TextBlock x:Name="tbDesc" FontSize="14" Foreground="#444444"  TextWrapping="Wrap"></TextBlock>
                        </StackPanel>
                        
                        <!--评价信息-->
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" HorizontalAlignment="Right">
                            <Button Width="80" Height="60" Margin="10,0,0,10" Click="Button_Click">
                                <Button.Content>
                                    <StackPanel>
                                        <TextBlock FontSize="20" HorizontalAlignment="Center">喜欢</TextBlock>
                                        <TextBlock FontSize="15" HorizontalAlignment="Center">（25人）</TextBlock>
                                    </StackPanel>
                                </Button.Content>
                            </Button>
                            <Button Width="80" Height="60" Margin="10,0,10,10">
                                <Button.Content>
                                    <StackPanel>
                                        <TextBlock FontSize="20" HorizontalAlignment="Center">不喜欢</TextBlock>
                                        <TextBlock FontSize="15" HorizontalAlignment="Center">（4人）</TextBlock>
                                    </StackPanel>
                                </Button.Content>
                            </Button>
                        </StackPanel>
                    </Grid>
                </Grid>
                
                <!--用户选择-->
                <Grid Grid.Column="1" Background="LightGray" Margin="5,0,0,0">
                    <StackPanel Margin="5">
                        <TextBlock FontSize="16" Text="颜色" HorizontalAlignment="Left"></TextBlock>
                        <Image x:Name="imgProduct" Margin="5" Width="40"  Height="40"  HorizontalAlignment="Left"
                                   Stretch="Fill" ToolTip="{Binding Color.Name}" RenderOptions.BitmapScalingMode="LowQuality"></Image>
                    </StackPanel>
                </Grid>
            </Grid>

            <!--搭配-->
            <ListBox x:Name="lbMatchedProoducts" Grid.Column="2" Margin="10"></ListBox>
        </Grid>

        <view:MenuButtonGroupBar x:Name="menuButtons" Grid.Row="1" HorizontalAlignment="Center" Height="110">
            <view:MenuButtonGroupBar.RenderTransform>
                <TranslateTransform></TranslateTransform>
            </view:MenuButtonGroupBar.RenderTransform>
        </view:MenuButtonGroupBar>
    </Grid>
</UserControl>
