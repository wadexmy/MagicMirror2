<UserControl x:Class="MagicMirror.Views.ProductTryingOnControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:converter="clr-namespace:MagicMirror.Converters"
              xmlns:view="clr-namespace:MagicMirror.Views"
             mc:Ignorable="d" d:DesignHeight="600" d:DesignWidth="1000">
    <UserControl.Resources>
        <converter:IntToPersonDescConverter x:Key="intToPersonDescConverter"></converter:IntToPersonDescConverter>
        <converter:DescriptionConverter x:Key="descriptionConverter"></converter:DescriptionConverter>
        <converter:QRCodeConverter x:Key="qrCodeConverter"></converter:QRCodeConverter>
        <converter:IndentParentConverter x:Key="indentParentConverter"></converter:IndentParentConverter>
        <converter:HeightDependWidthConverter x:Key="heightDependWidthConverter"></converter:HeightDependWidthConverter>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
        </Grid.RowDefinitions>
        
        <Grid Margin="10,20,10,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.15*"></ColumnDefinition>
                <ColumnDefinition Width="0.7*"></ColumnDefinition>
                <ColumnDefinition Width="0.15*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            
            <!--用户选择-->
            <ListBox x:Name="lbSelProducts" Background="White" SelectionChanged="lbProducts_SelectionChanged" Margin="10">
                <ListBox.Resources>
                    <Style TargetType="ListBoxItem">
                        <Setter Property="Opacity" Value="0.5" />
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ListBoxItem">
                                    <Border>
                                        <Image x:Name="pImg" Source="{Binding Path=Picture}" HorizontalAlignment="Center" Margin="2" Stretch="Fill"
                                               Width="{Binding ActualWidth,RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=ListBox}, Converter={StaticResource indentParentConverter}}"
                                               Height="{Binding Width,RelativeSource={RelativeSource Self}, Converter={StaticResource heightDependWidthConverter}}"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Trigger.Setters>
                                    <Setter Property="Opacity" Value="1.0" />
                                </Trigger.Setters>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Trigger.Setters>
                                    <Setter Property="Opacity" Value="1.0" />
                                </Trigger.Setters>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </ListBox.Resources>
            </ListBox>

            <Grid Grid.Column="1" Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.7*"></ColumnDefinition>
                    <ColumnDefinition Width="0.3*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                
                <Grid Grid.Column="0" Background="White">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="auto"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    
                    <Grid Grid.Column="0" >
                        <Image Source="{Binding Picture,Mode=TwoWay}" Stretch="Fill" Margin="10" 
                               RenderOptions.BitmapScalingMode="HighQuality"></Image>
                        <Image VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="10,0,10,10"
                               Width="60" Height="60" Source="{Binding Name,Converter={StaticResource qrCodeConverter}}"></Image>
                    </Grid>

                    <Grid Grid.Column="1" Width="180">
                        <!--基本信息-->
                        <StackPanel Margin="10">
                            <TextBlock x:Name="tbName" FontSize="16" Foreground="Black" TextWrapping="Wrap" Text="{Binding Name}"></TextBlock>
                            <TextBlock x:Name="tbDesc" FontSize="14" Foreground="#444444"  TextWrapping="Wrap" Text="{Binding Description, Converter={StaticResource descriptionConverter}}" ></TextBlock>
                        </StackPanel>
                        
                        <!--评价信息-->
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" HorizontalAlignment="Right">
                            <Button x:Name="btnLike" Width="80" Height="60" Margin="10,0,0,10" Click="btnLike_Click">
                                <Button.Content>
                                    <StackPanel>
                                        <TextBlock FontSize="20" HorizontalAlignment="Center" FontFamily="{StaticResource IconFont}" Text="&#xf164;"></TextBlock>
                                        <TextBlock FontSize="15" HorizontalAlignment="Center" 
                                                   Text="{Binding LikeCount,Converter={StaticResource intToPersonDescConverter}}"></TextBlock>
                                    </StackPanel>
                                </Button.Content>
                            </Button>
                            <Button  x:Name="btnDislike" Width="80" Height="60" Margin="10,0,10,10" Click="btnDislike_Click">
                                <Button.Content>
                                    <StackPanel>
                                        <TextBlock FontSize="20" HorizontalAlignment="Center" FontFamily="{StaticResource IconFont}" Text="&#xf165;"></TextBlock>
                                        <TextBlock FontSize="15" HorizontalAlignment="Center"  
                                                   Text="{Binding DislikeCount,Converter={StaticResource intToPersonDescConverter}}"></TextBlock>
                                    </StackPanel>
                                </Button.Content>
                            </Button>
                        </StackPanel>
                    </Grid>
                </Grid>
                
                <!--用户选择-->
                <Grid Grid.Column="1" Background="LightGray" Margin="5,0,0,0">
                    <StackPanel Margin="5">
                        <TextBlock FontSize="16" Text="" HorizontalAlignment="Left"></TextBlock>
                        <Image x:Name="imgProduct" Margin="5" Width="40"  Height="40"  HorizontalAlignment="Left"
                                   Stretch="Fill" ToolTip="{Binding Color.Name}" RenderOptions.BitmapScalingMode="LowQuality"></Image>
                    </StackPanel>
                </Grid>
            </Grid>

            <!--搭配-->
            <ListBox x:Name="lbMatchedProoducts" Grid.Column="2" Margin="10"></ListBox>
        </Grid>

        <view:MenuButtonGroupBar x:Name="menuButtons" Grid.Row="1" HorizontalAlignment="Center" Height="110">
            <view:MenuButtonGroupBar.RenderTransform>
                <TranslateTransform></TranslateTransform>
            </view:MenuButtonGroupBar.RenderTransform>
        </view:MenuButtonGroupBar>
    </Grid>
</UserControl>
