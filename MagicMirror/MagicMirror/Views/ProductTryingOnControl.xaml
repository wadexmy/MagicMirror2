<UserControl x:Class="MagicMirror.Views.ProductTryingOnControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
              xmlns:view="clr-namespace:MagicMirror.Views"
             mc:Ignorable="d" d:DesignHeight="600" d:DesignWidth="1000">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
        </Grid.RowDefinitions>
        
        <Grid Margin="10,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.15*"></ColumnDefinition>
                <ColumnDefinition Width="0.7*"></ColumnDefinition>
                <ColumnDefinition Width="0.15*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            
            <ListBox x:Name="lbTryingOnProducts" Grid.Column="0" Margin="10"></ListBox>
            
            <Grid Grid.Column="1" Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.7*"></ColumnDefinition>
                    <ColumnDefinition Width="0.3*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                
                <Grid Grid.Column="0" Background="White">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="auto"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Column="0" >
                        <Image Stretch="Fill" Source="pack://application:,,,/Resources/Images/1.jpg"></Image>
                        <Image Source="pack://application:,,,/Resources/Images/QRCode.jpg"
                               VerticalAlignment="Bottom" HorizontalAlignment="Right"
                               Width="80" Height="80" Margin="10,0,10,10"></Image>
                    </Grid>

                    <Grid Grid.Column="1" Width="180">
                        <StackPanel Margin="10">
                            <TextBlock FontSize="16" Foreground="Black" TextWrapping="Wrap">冬装新款原创设计民族风毛呢加厚棉衣女棉袄外套</TextBlock>
                            <TextBlock FontSize="14" Foreground="#444444"  TextWrapping="Wrap">
                                超级拉风的长款棉服，无论如何搭配，都是超酷的感觉，裁剪得体。加上优良的做工和优质的面料，值得拥有，版型宽松大气。图案印第安图腾，印第安民族是古老神秘的美洲民族，它神秘的历史和古老的文化引人研究探索，带着强烈的对艺术的热爱，把印第安文化运用到设计之中，具有文化底蕴。
                            </TextBlock>
                        </StackPanel>
                        
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" HorizontalAlignment="Right">
                            <Button Width="80" Height="60" Margin="10,0,0,10">
                                <Button.Content>
                                    <StackPanel>
                                        <TextBlock FontSize="20" HorizontalAlignment="Center">喜欢</TextBlock>
                                        <TextBlock FontSize="15" HorizontalAlignment="Center">（25人）</TextBlock>
                                    </StackPanel>
                                </Button.Content>
                            </Button>
                            <Button Width="80" Height="60" Margin="10,0,10,10">
                                <Button.Content>
                                    <StackPanel>
                                        <TextBlock FontSize="20" HorizontalAlignment="Center">不喜欢</TextBlock>
                                        <TextBlock FontSize="15" HorizontalAlignment="Center">（4人）</TextBlock>
                                    </StackPanel>
                                </Button.Content>
                            </Button>
                        </StackPanel>
                    </Grid>
                </Grid>
                
                <Grid Grid.Column="1" Background="YellowGreen" Margin="5,0,0,0">
                    <StackPanel Margin="5">
                        <TextBlock FontSize="16" Text="颜色" HorizontalAlignment="Left"></TextBlock>
                        <Image x:Name="imgProduct" Margin="5" Width="40"  Height="40"  HorizontalAlignment="Left"
                                   Stretch="Fill" ToolTip="{Binding Color.Name}" RenderOptions.BitmapScalingMode="LowQuality"></Image>
                    </StackPanel>
                </Grid>
            </Grid>

            <ListBox x:Name="lbMatchedProoducts" Grid.Column="2" Margin="10"></ListBox>
        </Grid>

        <view:MenuButtonGroupBar x:Name="menuButtons" Grid.Row="1" HorizontalAlignment="Center" Height="110">
            <view:MenuButtonGroupBar.RenderTransform>
                <TranslateTransform></TranslateTransform>
            </view:MenuButtonGroupBar.RenderTransform>
        </view:MenuButtonGroupBar>
    </Grid>
</UserControl>
